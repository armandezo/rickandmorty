{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
        "@": ["./src/*"],
        "@application/*": ["./src/application/*"],
        "@domain/*": ["./src/domain/*"],
        "@infrastructure/*": ["./src/infrastructure/*"],
        "@router/*": ["./src/route/*r"],
        "@interfaces/*": ["./src/interfaces/*"],
        "@constants/*": ["./src/constants/*"],
        "@ui/*": ["./src/ui/*"],
        "@assets/*": ["./src/ui/assets/*"],
        "@components/*": ["./src/ui/components/*"],
        "@componentsGlobal": ["./src/ui/components/componentsGlobal"],
        "@views/*": ["./src/ui/views/*"],
        "@shared/*": ["./src/ui/components/shared/*"],
        "@layout/*": ["./src/ui/components/layout/*"],
        "@plugins/*": ["./src/ui/components/plugins/*"],
        "@types/*":["./src/types/*"],
        "@icons/*":["./src/ui/components/icons/*"],
        "@scss/*": ["./src/ui/assets/scss/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
